pkgdesc='JFS filesystem utilities'
url='http://jfs.sourceforge.net'
arch=('i686' 'x86_64')
license=('GPL')
depends=('util-linux')
source=("http://jfs.sourceforge.net/project/pub/${pkgbase}-${pkgver}.tar.gz"
        'inttypes.patch')

groups=('base')

prepare() {
	cd "${srcdir}/${pkgbase}-${pkgver}"
	patch -p1 -i ../inttypes.patch
}

build() {
	cd "${srcdir}/${pkgbase}-${pkgver}"
	./configure --prefix=/usr --sbindir=/usr/bin 
	make
}

check() {
	cd "${srcdir}/${pkgbase}-${pkgver}"
	make check
}

package() {
	cd "${srcdir}/${pkgbase}-${pkgver}"
	make DESTDIR="${pkgdir}" install
}
