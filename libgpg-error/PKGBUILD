# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer: judd <jvinet@zeroflux.org>

pkgdesc="Support library for libgcrypt"
arch=(i686 x86_64)
url="http://www.gnupg.org"
license=('LGPL')
depends=('glibc' 'sh')
options=(!libtool)
source=(ftp://ftp.gnupg.org/gcrypt/libgpg-error/${pkgbase}-${pkgver}.tar.bz2)
	#ftp://ftp.franken.de/pub/crypt/mirror/ftp.gnupg.org/gcrypt/libgpg-error/${pkgbase}-${pkgver}.tar.bz2)


build() {
  cd "${srcdir}"/${pkgbase}-${pkgver}
  ./configure --prefix=/usr
  make
}

check() {
  cd ${srcdir}/${pkgbase}-${pkgver}
  make check
}

package() {
  cd "${srcdir}"/${pkgbase}-${pkgver}
  make DESTDIR="${pkgdir}/" install
}
