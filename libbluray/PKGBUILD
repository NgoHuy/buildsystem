pkgdesc="Library to access Blu-Ray disks for video playback"
arch=('i686' 'x86_64')
url="http://www.videolan.org/developers/libbluray.html"
license=('LGPL2.1')
depends=('libxml2' 'freetype2')
options=(!libtool)
source=(ftp://ftp.videolan.org/pub/videolan/$pkgbase/$pkgver/$pkgbase-$pkgver.tar.bz2)

build() {
  cd "$pkgbase-$pkgver"

  ./configure --prefix=/usr \
    --disable-static
  make
}

package() {
  cd "$pkgbase-$pkgver"
  make DESTDIR="$pkgdir" install
}

