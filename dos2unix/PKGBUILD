pkgdesc='Text file format converter'
arch=('i686' 'x86_64')
url='http://waterlan.home.xs4all.nl/dos2unix.html'
license=('BSD')
depends=('glibc')
makedepends=('perl')
conflicts=('hd2u')
source=("http://waterlan.home.xs4all.nl/${pkgbase}/${pkgbase}-${pkgver}.tar.gz")

build() {
  cd $srcdir/$pkgbase-$pkgver
  make
}

package() {
  cd $srcdir/$pkgbase-$pkgver
  make DESTDIR=$pkgdir install
  install -D -m644 COPYING.txt $pkgdir/usr/share/licenses/$pkgbase/LICENSE
}
