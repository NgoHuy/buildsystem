# Original Maintainer: Dan McGee <dan@archlinux.org>
# Original Contributor: Manolis Tzanidakis <manolis@archlinux.org>

pkgdesc="Non-DNS IP-to-country resolver C library & utils"
arch=('i686' 'x86_64')
url="http://www.maxmind.com/app/c"
license=('GPL')
depends=('zlib' 'geoip-database')
backup=('etc/geoip/GeoIP.conf')
options=('!libtool' '!emptydirs')
source=(http://www.maxmind.com/download/geoip/api/c/GeoIP-$pkgver.tar.gz 
        pkgconfig.patch)

prepare() {
  cd GeoIP-$pkgver
  patch -Np1 -i ../pkgconfig.patch
}

build() {
  cd GeoIP-$pkgver

  autoreconf -vi
  ./configure \
    --prefix=/usr \
    --mandir=/usr/share/man \
    --sysconfdir=/etc/geoip
  make
}

check() {
  cd GeoIP-$pkgver
  make check
}

package() {
  cd GeoIP-$pkgver

  make DESTDIR="$pkgdir" install

  # country database is provided by geoip-database
  rm "$pkgdir/usr/share/GeoIP/GeoIP.dat"
}

# vim:set ts=2 sw=2 et:
