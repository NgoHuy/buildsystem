#!/bin/bash

# Maintainer: Anh K. Huynh <kyanh@theslinux.org>

pkgdesc='Default profile for uim-vi'
url='https://github.com/TheSLinux-forks/126-uim-vi'
license=('GPL')
arch=('any')
depends=('uim-vi-xtelex')
source=("https://github.com/TheSLinux-forks/126-uim-vi/archive/v${pkgver}.tar.gz")

build() {
  msg "Hello, world."
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  install -d m755 "${pkgdir}/usr/share/theslinux/126/"

  find "./uim.d/" -type f \
  | while read _file; do
    install -D -m755 "$_file" "${pkgdir}/usr/share/theslinux/126/$_file"
  done
}
