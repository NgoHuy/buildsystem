pkgdesc="Keyboard handling library using XKB data"
arch=(i686 x86_64)
url="http://xkbcommon.org/"
license=(custom)
depends=(xkeyboard-config)
makedepends=(doxygen xorg-util-macros)
options=('!libtool')
source=("http://xkbcommon.org/download/$pkgbase-$pkgver.tar.xz")
#source=("$pkgbase-$pkgver::git://github.com/xkbcommon/$pkgbase.git")

build() {
  cd $pkgbase-$pkgver
  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd $pkgbase-$pkgver
  make DESTDIR="$pkgdir" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgbase/LICENSE"
}
