# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer: Jan de Groot <jgc@archlinux.org>

pkgdesc="Theme engines for GTK+ 2"
arch=(i686 x86_64)
license=('GPL' 'LGPL')
depends=('gtk2>=2.22.0')
makedepends=('pkg-config' 'intltool')
options=('!libtool')
url="http://live.gnome.org/GnomeArt"
source=(ftp://ftp.archlinux.org/other/gtk-engines/${pkgbase}-${pkgver}.tar.gz
        ftp://ftp.archlinux.org/other/gtk-engines/${pkgbase}-${pkgver}.tar.gz.sig)
conflicts=('lighthouse-gtk2' 'clearlooks-gtk2')
replaces=('lighthouse-gtk2')

build() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  ./configure --prefix=/usr --enable-animation
  make
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
