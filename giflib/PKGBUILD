pkgdesc="A library for reading and writing gif images"
url="http://sourceforge.net/projects/giflib/"
arch=('i686' 'x86_64')
license=('MIT')
depends=('libx11')
makedepends=('xmlto' 'docbook-xml' 'docbook-xsl')
provides=("libungif=${pkgver}")
conflicts=('libungif')
replaces=('libungif')
options=('!libtool')
source=(http://downloads.sourceforge.net/sourceforge/giflib/${pkgbase}-${pkgver}.tar.bz2
        giflib-5.0.4-include-stddef.patch)

prepare() {
  cd ${pkgbase}-${pkgver}
  patch -Np1 -i ../giflib-5.0.4-include-stddef.patch
}

build() {
  cd ${pkgbase}-${pkgver}
  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd ${pkgbase}-${pkgver} 
  make DESTDIR="${pkgdir}" install

  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgbase}/COPYING"
}
