pkgdesc="A library making programming with POSIX capabilities easier than traditional libcap"
arch=('i686' 'x86_64')
url="http://people.redhat.com/sgrubb/libcap-ng/"
license=('GPL2' 'LGPL2.1')
depends=('glibc')
options=('!libtool')
source=(http://people.redhat.com/sgrubb/$pkgbase/$pkgbase-$pkgver.tar.gz)

build() {
  cd $pkgbase-$pkgver

  ./configure --prefix=/usr --enable-static=no --with-python=no
  make
}

package() {
  cd $pkgbase-$pkgver

  make DESTDIR=$pkgdir install
}

