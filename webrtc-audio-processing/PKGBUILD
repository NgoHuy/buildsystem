# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer: Jan Alexander Steffens (heftig) <jan.steffens@gmail.com>

_gitrev=9413986
pkgdesc="AudioProcessing library based on Google's implementation of WebRTC"
arch=(i686 x86_64)
url="http://freedesktop.org/software/pulseaudio/webrtc-audio-processing"
license=(custom)
depends=(gcc-libs)
options=(!libtool)
source=("$url/$pkgbase-$pkgver.tar.xz")

build() {
  cd $pkgbase-$pkgver
  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd $pkgbase-$pkgver
  make DESTDIR="$pkgdir" install

  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgbase/COPYING"
  install -Dm644 PATENTS "$pkgdir/usr/share/licenses/$pkgbase/PATENTS"
}
