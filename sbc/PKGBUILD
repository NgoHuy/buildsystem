pkgdesc="Bluetooth Subband Codec (SBC) library"
arch=('i686' 'x86_64')
url="http://www.bluez.org/"
license=('GPL' 'LGPL')
depends=('glibc')
options=(!libtool)
source=(http://www.kernel.org/pub/linux/bluetooth/$pkgbase-$pkgver.tar.xz)

build() {
  cd $pkgbase-$pkgver
  ./configure --prefix=/usr --disable-static --disable-tester
  make
}

package() {
  cd $pkgbase-$pkgver
  make DESTDIR="$pkgdir" install
}
