pkgdesc="A terminal pager similar to 'more' and 'less'"
arch=('i686' 'x86_64')
depends=('slang')
license=('GPL')
url="http://www.jedsoft.org/most/index.html"
source=(ftp://space.mit.edu/pub/davis/${pkgbase}/${pkgbase}-${pkgver}.tar.gz
        most-debian.patch
        most-leak-fd.patch)

build() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  patch -Np1 -i ../most-debian.patch
  patch -Np1 -i ../most-leak-fd.patch
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
