# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer: Tobias Powalowski <tpowa@archlinux.org>

pkgdesc="A seam-carving C/C++ library called Liquid Rescale"
arch=('i686' 'x86_64')
url="http://liblqr.wikidot.com/"
license=('GPL')
depends=('glib2')
makedepends=('pkgconfig')
options=('!libtool' '!emptydirs')
source=("http://liblqr.wikidot.com/local--files/en:download-page/$pkgbase-1-$pkgver.tar.bz2")

build() {
  cd "$srcdir/$pkgbase-1-$pkgver"
  ./configure --prefix=/usr 
  make
}

package() {
  cd "$srcdir/$pkgbase-1-$pkgver"
  make DESTDIR="$pkgdir/" install
}
