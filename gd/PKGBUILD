# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer: Eric Belanger <eric@archlinux.org>

pkgdesc="Library for the dynamic creation of images by programmers"
arch=('i686' 'x86_64')
url="http://www.libgd.org/"
license=('custom')
depends=('libpng' 'fontconfig' 'libjpeg')
optdepends=('perl: bdftogd script')
options=('!libtool')
source=(https://bitbucket.org/libgd/gd-libgd/downloads/libgd-${pkgver}.tar.xz)

build() {
  cd libgd-${pkgver}
  ./configure --prefix=/usr --without-xpm
  make
}

check() {
  cd libgd-${pkgver}
  make check
}

package() {
  cd libgd-${pkgver}
  make DESTDIR="${pkgdir}" install
  install -D -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgbase}/LICENSE"
}
