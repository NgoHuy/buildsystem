# Original Contributor: Geoffroy Carrier <geoffroy.carrier@koon.fr>
pkgdesc="Task manager of the LXDE Desktop"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://lxde.org/"
groups=('lxde')
depends=('gtk2')
makedepends=('pkgconfig' 'intltool')
source=(http://downloads.sourceforge.net/sourceforge/lxde/${pkgbase}-${pkgver}.tar.gz)

build() {
	cd "$srcdir/$pkgbase-$pkgver"
	autoreconf
	./configure --sysconfdir=/etc --prefix=/usr
	make
}
package() {
	cd "$srcdir/$pkgbase-$pkgver"
	make DESTDIR="$pkgdir" install
}
