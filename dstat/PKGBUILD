pkgdesc="A versatile resource statistics tool"
arch=('any')
url="http://dag.wieers.com/home-made/dstat/"
license=('GPL')
depends=('python2')
source=(http://dag.wieers.com/home-made/$pkgbase/$pkgbase-$pkgver.tar.bz2)

package() {
  cd $srcdir/$pkgbase-$pkgver

  sed -i 's|#!/usr/bin/env python|#!/usr/bin/env python2|g' dstat
  make DESTDIR=$pkgdir install

  cd docs
  for f in *.html *.txt; do
    install -Dm644 $f $pkgdir/usr/share/doc/$pkgbase/$f
  done  
}
