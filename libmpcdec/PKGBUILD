# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer: Jan de Groot <jgc@archlinux.org>

pkgdesc="Musepack decoding library"
arch=('i686' 'x86_64')
url="http://musepack.net/"
license=('custom')
depends=('glibc')
options=('!libtool')
source=("http://files.musepack.net/source/${pkgbase}-${pkgver}.tar.bz2")

build() {
  cd ${srcdir}/${pkgbase}-${pkgver}
  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd ${srcdir}/${pkgbase}-${pkgver}
  make DESTDIR=${pkgdir} install
  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/${pkgbase}/COPYING
}
