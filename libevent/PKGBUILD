# Original Maintainer: Tom Gundersen <teg@jklm.no>
# Original Contributor: Judd <jvinet@zeroflux.org>

pkgdesc="An event notification library"
arch=('i686' 'x86_64')
url="http://www.monkey.org/~provos/libevent/"
license=('BSD')
depends=('openssl')
optdepends=('python2: to use event_rpcgen.py')
options=('!libtool')
source=(https://github.com/downloads/${pkgbase}/${pkgbase}/${pkgbase}-$pkgver-stable.tar.gz{,.asc})

build() {
  cd "${srcdir}/${pkgbase}-${pkgver}-stable"
  ./configure --prefix=/usr --sysconfdir=/etc
  make
}

check() {
  cd "${srcdir}/${pkgbase}-${pkgver}-stable"
  make check
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}-stable"
  make DESTDIR="${pkgdir}" install
  install -Dm 644 LICENSE "${pkgdir}"/usr/share/licenses/libevent/LICENSE
}
