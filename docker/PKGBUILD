# Maintainer: Severus <severus@theslinux.org>
# Original Contributor: Jochem Kossen <j.kossen@home.nl>

pkgdesc="Docker is a docking application (WindowMaker dock app) which acts as a system tray for KDE and GNOME2."
arch=('i686' 'x86_64')
url="http://icculus.org/openbox/2/docker/"
license=('GPL')
depends=('glibc' 'glib2' 'libx11')
source=("http://icculus.org/openbox/2/$pkgbase/$pkgbase-$pkgver.tar.gz")

build() {
  cd $srcdir/$pkgbase-$pkgver
  make
}

package() {
  cd $srcdir/$pkgbase-$pkgver
  install -d $pkgdir/usr/bin
  make PREFIX=$pkgdir/usr install
}
