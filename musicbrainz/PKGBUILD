pkgdesc="The second generation incarnation of the CD Index"
arch=('i686' 'x86_64')
url="http://www.musicbrainz.org"
license=('LGPL')
depends=('expat>=2.0' 'gcc-libs')
makedepends=('python2')
options=('!libtool')
source=(ftp://ftp.musicbrainz.org/pub/$pkgbase/libmusicbrainz-${pkgver}.tar.gz
	'gcc4.3.patch')

build() {
  cd ${srcdir}/lib${pkgbase}-${pkgver}

  patch -p1 -i ${srcdir}/gcc4.3.patch
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/lib${pkgbase}-${pkgver}
  make DESTDIR=${pkgdir} install

  cd python
  python2 setup.py install --root=${pkgdir}
}
