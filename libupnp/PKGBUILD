pkgdesc="Portable Open Source UPnP Development Kit"
arch=('i686' 'x86_64')
url="http://pupnp.sourceforge.net/"
license=('BSD')
depends=('glibc')
makedepends=('pkgconfig')
options=('!libtool')
source=("http://downloads.sourceforge.net/sourceforge/pupnp/${pkgbase}-${pkgver}.tar.bz2")

build() {
  cd "${srcdir}/${pkgbase}-${pkgver}"

  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}"

  make DESTDIR=${pkgdir} install
  install -Dm644 LICENSE ${pkgdir}/usr/share/licenses/custom/${pkgbase}/LICENSE
}
