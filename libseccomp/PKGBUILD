pkgdesc='Enhanced seccomp library'
arch=('i686' 'x86_64')
license=('LGPL2.1')
url="http://sourceforge.net/projects/libseccomp/"
depends=('glibc')
source=("http://downloads.sourceforge.net/project/$pkgbase/$pkgbase-$pkgver.tar.gz")

build() {
  cd $pkgbase-$pkgver
  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgbase-$pkgver
  make DESTDIR="$pkgdir" install
}
