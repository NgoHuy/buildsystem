# Original Contributor: Rainer Moll <renari@arcor.de>

pkgdesc="Library for generating character- and string-glyphs from Adobe Type 1 fonts"
arch=('i686' 'x86_64')
url="http://www.ibiblio.org/pub/Linux/libs/graphics/!INDEX.html"
license=('GPL')
depends=('libxaw')
options=(!libtool)
source=(http://www.ibiblio.org/pub/Linux/libs/graphics/${pkgbase}-${pkgver}.tar.gz )

build() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  ./configure --prefix=/usr
  make without_doc
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
