pkgdesc="Matroska library"
arch=('i686' 'x86_64')
url="http://dl.matroska.org/downloads/libmatroska/"
license=('LGPL')
depends=('libebml')
source=("http://dl.matroska.org/downloads/${pkgbase}/${pkgbase}-${pkgver}.tar.bz2")

build() {
  cd "${srcdir}/${pkgbase}-${pkgver}/make/linux"

  make sharedlib
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}/make/linux"

  make prefix="${pkgdir}/usr" install
}
