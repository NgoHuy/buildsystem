pkgdesc="High-performance asynchronous HTTP client library"
arch=('i686' 'x86_64')
url="http://code.google.com/p/serf/"
license=('Apache')
depends=('apr-util')
makedepends=('scons')
options=('!libtool' '!staticlibs')
source=(http://serf.googlecode.com/files/${PACKAGE_BASE}-${PACKAGE_VERSION}.tar.bz2)

build() {
  cd ${pkgname}-${pkgver}
  scons PREFIX=/usr
}

check() {
  cd ${pkgname}-${pkgver}
  scons check
}

package() {
  cd ${pkgname}-${pkgver}
  install -d "${pkgdir}/usr"
  scons PREFIX="${pkgdir}/usr" install
}
