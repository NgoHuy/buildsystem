pkgdesc="Hex Editor for Linux"
arch=('i686' 'x86_64')
url="http://rigaux.org/hexedit.html"
license=('GPL')
depends=('ncurses')
source=("http://rigaux.org/${pkgbase}-${pkgver}.src.tgz")

build() {
  cd "${srcdir}/${pkgbase}"
  CFLAGS="$CFLAGS -Wall"

  ./configure
  make
}

package() {
  cd "${srcdir}/${pkgbase}"

  make prefix="${pkgdir}/usr" install
}
