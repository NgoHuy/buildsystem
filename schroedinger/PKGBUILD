pkgdesc="An implemenation of the Dirac video codec in ANSI C code"
arch=('i686' 'x86_64')
url="http://www.diracvideo.org/"
license=('GPL2' 'LGPL2.1' 'MPL' 'MIT')
depends=('orc' 'gcc-libs')
options=(!libtool)
source=(http://www.diracvideo.org/download/schroedinger/$pkgbase-$pkgver.tar.gz)

build() {
  cd "$srcdir/$pkgbase-$pkgver"
  ./configure --prefix=/usr

  make
}

package() {
  cd "$srcdir/$pkgbase-$pkgver"

  make DESTDIR="$pkgdir" install
  install -m644 -D COPYING.MIT "$pkgdir/usr/share/licenses/$pkgbase/COPYING.MIT"
}
