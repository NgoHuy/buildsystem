pkgdesc="A karaoke and text codec for embedding in ogg"
url="http://libkate.googlecode.com/"
license=('BSD')
arch=('i686' 'x86_64')
depends=('libpng' 'libogg' 'python2')
makedepends=('pkg-config')
optdepends=('wxpython: for KateDJ'
            'liboggz: for KateDJ')
options=('!libtool')
source=("http://libkate.googlecode.com/files/${pkgbase}-${pkgver}.tar.gz")

build() {
  cd "${srcdir}/${pkgbase}-${pkgver}"

  export PYTHON="/usr/bin/python2"
  sed "1s/python$/python2/" -i tools/KateDJ/KateDJ

  ./configure --prefix=/usr \
              --disable-static \
              --disable-doc
  make
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}"

  make DESTDIR="${pkgdir}" install
  # install BSD license
  install -Dm644 COPYING "${pkgdir}/usr/share/licenses/${pkgbase}/LICENSE"
}
