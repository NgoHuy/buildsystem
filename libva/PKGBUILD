# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer : Ionut Biru <ibiru@archlinux.org>

pkgdesc="Video Acceleration (VA) API for Linux"
arch=('i686' 'x86_64')
url="http://freedesktop.org/wiki/Software/vaapi"
license=('MIT')
depends=('libegl' 'libgl' 'libdrm' 'libxfixes')
makedepends=('mesa')
optdepends=('libva-vdpau-driver: vdpau back-end for nvidia'
            'libva-intel-driver: back-end for intel cards')
options=('!libtool')
source=(http://www.freedesktop.org/software/vaapi/releases/$pkgbase/$pkgbase-$pkgver.tar.bz2)

build() {
  cd "$pkgbase-$pkgver"
  ./configure --prefix=/usr
  make
}

package() {
  cd "$pkgbase-$pkgver"
  make DESTDIR="$pkgdir" install
  install -m644 -D COPYING "$pkgdir/usr/share/licenses/$pkgbase/COPYING"
}

# vim:set ts=2 sw=2 et:
