# Original Maintainer: Jan de Groot <jgc@archlinux.org>
# Original Contributor: William Rea <sillywilly@gmail.com>
pkgdesc="MSWord library can load and parse Word 2000, 97, 95 and 6 file formats"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/wvware"
license=('GPL')
depends=('libgsf' 'libpng' 'sh')
makedepends=('pkg-config')
options=('!libtool')
source=("http://www.abisource.com/downloads/${pkgbase}/${pkgver}/${pkgbase}-${pkgver}.tar.gz")

build() {
  cd ${pkgbase}-${pkgver}

  ./configure --prefix=/usr \
              --mandir=/usr/share/man
  make
}

package() {
  cd ${pkgbase}-${pkgver}

  make DESTDIR="${pkgdir}" install
}
