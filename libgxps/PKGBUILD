# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer: Ionut Biru <ibiru@archlinux.org>

pkgdesc="XPS Documents library"
arch=(i686 x86_64)
url="https://live.gnome.org/libgxps"
license=('GPL2')
depends=('cairo' 'libarchive' 'libjpeg-turbo' 'libtiff' 'lcms2')
options=(!libtool)
source=(http://download.gnome.org/sources/$pkgbase/${pkgver%.*}/$pkgbase-$pkgver.tar.xz)

build() {
  cd "$pkgbase-$pkgver"
  ./configure --prefix=/usr \
    --disable-static
  make
}

package() {
  cd "$pkgbase-$pkgver"
  make DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
