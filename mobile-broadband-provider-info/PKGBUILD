# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer: Jan de Groot <jgc@archlinxu.org>

pkgdesc="Network Management daemon"
arch=('any')
license=('other')
url="http://git.gnome.org/browse/mobile-broadband-provider-info/"
source=(http://download.gnome.org/sources/${pkgbase}/${pkgver}/${pkgbase}-${pkgver}.tar.xz)

build() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
