# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer: Andreas Radke <andyrtr@archlinux.org>

_posixver=2003-a
pkgdesc="Linux man pages"
arch=('any')
license=('GPL')
url="http://man7.org/linux/man-pages/index.html"
groups=('base')
depends=()
source=(http://www.kernel.org/pub/linux/docs/man-pages/$pkgbase-$pkgver.tar.xz
        http://www.kernel.org/pub/linux/docs/man-pages/man-pages-posix/$pkgbase-posix-${_posixver}.tar.bz2)

build() {
  cd ${srcdir}/$pkgbase-$pkgver
  
  # move the posix pages
  mkdir -p ${srcdir}/$pkgbase-$pkgver/man0
  for sect in 0 1 3; do
    sed -i "/^\.so /s/man${sect}p/man$sect/" "${srcdir}/$pkgbase-posix-${_posixver}/man${sect}p"/*
    mv -iv "${srcdir}/$pkgbase-posix-${_posixver}/man${sect}p"/* "${srcdir}/$pkgbase-$pkgver/man$sect/"
  done
}

package() {
  cd ${srcdir}/$pkgbase-$pkgver

  make prefix=${pkgdir}/usr install

  cd ${pkgdir}/usr/share/man
  # these are included in coreutils || return 1
  rm -f man1/{chgrp,chmod,chown,cp,dir,dd}.1
  rm -f man1/{df,dircolors,du,install,ln,ls}.1
  rm -f man1/{mkdir,mkfifo,mknod,mv,rm,rmdir}.1
  rm -f man1/{touch,vdir}.1
  # this is included in shadow
  rm -f man5/passwd.5
  rm -f man3/getspnam.3
  # this is included in diffutils
  rm -f man1/diff.1
  # this is included in xf86-input-mouse
  rm -f man4/mouse.4
}
