pkgdesc="Codec designed for interactive speech and audio transmission over the Internet"
arch=(i686 x86_64)
url="http://www.opus-codec.org/"
license=(BSD)
depends=(glibc)
options=('!libtool')
source=(http://downloads.us.xiph.org/releases/$pkgbase/$pkgbase-$pkgver.tar.gz)

build() {
  cd $pkgbase-$pkgver
  ./configure --prefix=/usr --enable-custom-modes
  make
}

check() {
  cd $pkgbase-$pkgver
  make check
}

package() {
  cd $pkgbase-$pkgver
  make DESTDIR="$pkgdir" install
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgbase/LICENSE"
}
