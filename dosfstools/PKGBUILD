# Original Maintainer: dorphell <dorphell@archlinux.org>
# Committer: Judd Vinet <jvinet@zeroflux.org>
pkgdesc="DOS filesystem utilities"
arch=(i686 x86_64)
depends=('glibc')
source=(http://www.daniel-baumann.ch/files/software/$pkgbase/$pkgbase-$pkgver.tar.xz{,.sig})
url="http://www.daniel-baumann.ch/software/dosfstools/"
license=('GPL2')

build() {
   cd $srcdir/$pkgbase-$pkgver
   make
}

package () {
   cd $srcdir/$pkgbase-$pkgver
   make DESTDIR=$pkgdir PREFIX=/usr SBINDIR=/usr/bin MANDIR=/usr/share/man DOCDIR=/usr/share/doc install
}
