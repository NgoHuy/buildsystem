#!/bin/bash
# Maintainer: Anh K. Huynh <kyanh@theslinux.org>
# Original Maintainer: Allan McRae <allan@archlinux.org>
# Original Contributor: Eric Belanger <eric@archlinux.org>
# Original Contributor: John Proctor <jproctor@prium.net>

pkgdesc="A library that implements Perl 5-style regular expressions"
arch=('i686' 'x86_64')
url="http://www.pcre.org/"
license=('BSD')
depends=('gcc-libs')
options=('!libtool')
source=(ftp://ftp.csx.cam.ac.uk/pub/software/programming/pcre/${pkgbase}-${pkgver}.tar.bz2{,.sig})

build() {
  cd "${srcdir}"/${pkgbase}-${pkgver}
  ./configure --prefix=/usr \
    --enable-pcre16 --enable-pcre32 --enable-jit \
    --enable-utf --enable-unicode-properties
  make
}

check() {
  cd "${srcdir}"/${pkgbase}-${pkgver}
  make check
}

package() {
  cd "${srcdir}"/${pkgbase}-${pkgver}
  make DESTDIR="${pkgdir}" install

  install -Dm644 LICENCE "${pkgdir}"/usr/share/licenses/${pkgbase}/LICENSE
}
