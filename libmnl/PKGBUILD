pkgdesc='Minimalistic user-space library oriented to Netlink developers.'
arch=('i686' 'x86_64')
url='http://www.netfilter.org/projects/libmnl/'
license=('LGPL2.1')
depends=('glibc')
options=('!libtool')
source=("http://www.netfilter.org/projects/$pkgbase/files/$pkgbase-$pkgver.tar.bz2")

build() {
  cd $pkgbase-$pkgver
  ./configure --prefix=/usr
}

package() {
  cd $pkgbase-$pkgver
  make DESTDIR="$pkgdir" install
}

