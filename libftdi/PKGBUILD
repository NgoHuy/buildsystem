# Maintainer: Severus <severus@theslinux.org>
# Original Contributor: Tobias Powalowski <tpowa@archlinux.org>

pkgdesc="A library to talk to FTDI chips"
arch=('i686' 'x86_64')
url="http://www.intra2net.com/en/developer/libftdi/download.php"
license=('GPL2' 'LGPL2.1')
depends=('libusb-compat' 'gcc-libs')
makedepends=('boost')
options=('!libtool')
source=(http://www.intra2net.com/en/developer/libftdi/download/$pkgbase-$pkgver.tar.gz{,.sig})

build() {
  cd "$srcdir/$pkgbase-$pkgver"
  sed -i '/no-install/d' examples/Makefile.in
  ./configure --prefix=/usr
  make
}

package() {
  cd "$srcdir/$pkgbase-$pkgver"
  make DESTDIR="$pkgdir" install
}
