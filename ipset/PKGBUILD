# Original Maintainer: SÃ©bastien Luttringer

pkgdesc='Administration tool for IP sets'
arch=('i686' 'x86_64')
url='http://ipset.netfilter.org'
license=('GPL2')
depends=('libmnl' 'bash')
backup=("etc/$pkgbase.conf")
options=('!libtool')
source=("http://ipset.netfilter.org/$pkgbase-$pkgver.tar.bz2"
        "$pkgbase.service")

build() {
  cd $pkgbase-$pkgver
  ./configure --prefix=/usr --sbindir=/usr/bin --with-kmod=no
  make
}

package() {
  pushd $pkgbase-$pkgver
  make DESTDIR="$pkgdir" install
  # install doc
  install -dm755 "$pkgdir/usr/share/doc/$pkgbase"
  install -m644 README UPGRADE ChangeLog "$pkgdir/usr/share/doc/$pkgbase"
  # install pkgconfig file
  install -Dm644 lib/libipset.pc "$pkgdir/usr/lib/pkgconfig/libipset.pc"
  popd
  # systemd
  install -Dm 644 $pkgbase.service \
    "$pkgdir/usr/lib/systemd/system/$pkgbase.service"
  # default config file
  install -Dm 644 /dev/null "$pkgdir/etc/$pkgbase.conf"
}

# vim:set ts=2 sw=2 et:
