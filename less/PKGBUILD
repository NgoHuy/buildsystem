#!/bin/bash

# Maintainer: Anh K. Huynh <kyanh@theslinux.org>
# Original Maintainer: Allan McRae <allan@archlinux.org>
# Original Contributor: judd <jvinet@zeroflux.org>

pkgdesc="A terminal based program for viewing text files"
license=('GPL3')
arch=('i686' 'x86_64')
url="http://www.greenwoodsoftware.com/less"
groups=('base')
depends=('ncurses' 'pcre')
source=("http://www.greenwoodsoftware.com/$pkgbase/$pkgbase-${pkgver#*.}.tar.gz"{,.sig})

build() {
  cd "${srcdir}/${pkgbase}-${pkgver#*.}"

  ./configure --prefix=/usr --sysconfdir=/etc --with-regex=pcre
  make
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver#*.}"

  make prefix="${pkgdir}"/usr install
}
