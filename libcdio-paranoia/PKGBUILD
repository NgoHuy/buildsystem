# Original Maintainer:
# Original Contributor: damir <damir@archlinux.org>

pkgdesc="CD paranoia libraries from libcdio"
arch=('i686' 'x86_64')
license=('GPL' 'LGPL')
url="http://www.gnu.org/software/libcdio/"
depends=('libcdio')
options=('!libtool')
source=(http://ftp.gnu.org/gnu/libcdio/${pkgbase}-${pkgver}.tar.bz2{,.sig})

build() {
  cd "${pkgbase}-${pkgver}"
  ./configure --prefix=/usr --enable-cpp-progs --disable-static --disable-example-progs
  make
}

package() {
  cd "${pkgbase}-${pkgver}"
  make -j1 DESTDIR="${pkgdir}" install
}
