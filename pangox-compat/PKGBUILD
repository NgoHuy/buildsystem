# Original Maintainer: Jan Alexander Steffens (heftig) <jan.steffens@gmail.com>

pkgdesc="X Window System font support for Pango"
arch=('i686' 'x86_64')
license=('LGPL')
depends=('pango')
options=('!libtool')
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgbase}/${pkgver:0:3}/${pkgbase}-${pkgver}.tar.xz)
url="http://www.pango.org/"

build() {
  cd ${pkgbase}-${pkgver}

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
    --disable-static
  make
}

package() {
  cd ${pkgbase}-${pkgver}
  make -j1 DESTDIR="${pkgdir}" install
}
