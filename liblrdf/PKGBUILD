# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer: Giovanni Scafora <giovanni@archlinux.org>

pkgdesc="A library for the manipulation of RDF file in LADSPA plugins"
arch=('i686' 'x86_64')
url="https://github.com/swh/LRDF"
depends=('raptor' 'ladspa')
license=('GPL')
options=('!libtool')
source=(${pkgbase}-${pkgver}.tar.gz::https://github.com/swh/LRDF/tarball/${pkgver})

build() {
  cd "${srcdir}"/swh-LRDF-*
  autoreconf -vfi
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}"/swh-LRDF-*
  make DESTDIR="${pkgdir}" install
}
