# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer: Giovanni Scafora <giovanni@archlinux.org>

pkgdesc="Tools for accessing and converting various ebook file formats"
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/ebook-tools/"
license=('custom')
depends=('libzip' 'libxml2' 'convertlit')
makedepends=('pkgconfig' 'cmake')
source=("http://downloads.sourceforge.net/${pkgbase}/${pkgbase}-${pkgver}.tar.gz")

build() {
  cd "${srcdir}"

  mkdir build
  cd build
  cmake ../${pkgbase}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "${srcdir}/build"

  make DESTDIR="${pkgdir}" install

  install -Dm644 ${srcdir}/${pkgbase}-${pkgver}/LICENSE \
    "${pkgdir}/usr/share/licenses/${pkgbase}/LICENSE"
}
