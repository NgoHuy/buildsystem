pkgdesc="VTE-based terminal emulator (part of LXDE)"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://lxde.org/"
groups=('lxde')
depends=('fontconfig' 'libx11' 'glib2' 'vte' 'gtk2')
makedepends=('pkgconfig' 'intltool')
source=(http://downloads.sourceforge.net/sourceforge/lxde/${pkgbase}-${pkgver}.tar.gz
        shift-keybinds.patch)

build() {
	cd "$srcdir"/$pkgbase-$pkgver

	patch -Np1 -i "$srcdir"/shift-keybinds.patch

	./configure --sysconfdir=/etc --prefix=/usr
	make
}

package() {
	cd "$srcdir"/$pkgbase-$pkgver
	make DESTDIR="$pkgdir" install
}

