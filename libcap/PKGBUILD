# Original Contributor: Hugo Doria <hugo@archlinux.org>

pkgdesc="POSIX 1003.1e capabilities"
arch=('i686' 'x86_64')
url="http://sites.google.com/site/fullycapable/"
license=('GPL2')
depends=('glibc' 'attr')
options=('!staticlibs')
source=(ftp://ftp.archlinux.org/other/${pkgbase}/${pkgbase}-${pkgver}.tar.gz{,.asc})

prepare() {
  cd ${srcdir}/${pkgbase}-${pkgver}

  # install into /usr/bin
  sed -i "/SBINDIR/s#sbin#bin#" Make.Rules
}

build() {
  cd ${srcdir}/${pkgbase}-${pkgver}
  make
}

package() {
  cd ${srcdir}/${pkgbase}-${pkgver}
  make prefix=/usr lib=/lib DESTDIR=${pkgdir} RAISE_SETFCAP=no install

  install -Dm644 pam_cap/capability.conf \
    $pkgdir/usr/share/doc/$pkgbase/capability.conf.example
}
