# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer: Tobias Powalowski <tpowa@archlinux.org>
pkgdesc="A 16-bit x86 bios"
arch=('any')
url="http://www.coreboot.org/SeaBIOS"
license=('GPL3' 'LGPL3')
makedepends=('iasl' 'python2' 'inetutils')
options=('!makeflags' '!strip')
source=(http://code.coreboot.org/p/seabios/downloads/get/${pkgbase}-${pkgver}.tar.gz)

build() {
  cd ${pkgbase}-${pkgver}
  sed -i -e 's/python/python2/g' Makefile
  make
}

package() {
  install -D -m644 ${pkgbase}-${pkgver}/out/bios.bin "${pkgdir}/usr/share/qemu/bios.bin"
  install -D -m644 ${pkgbase}-${pkgver}/out/*.aml "${pkgdir}/usr/share/qemu/"
}
