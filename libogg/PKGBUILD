# Original Contributor: John Proctor <jproctor@prium.net>

pkgdesc="Ogg bitstream and framing library"
arch=('i686' 'x86_64')
url="http://www.xiph.org/ogg/"
license=('BSD')
depends=('glibc')
options=('!libtool')
source=(http://downloads.xiph.org/releases/ogg/$pkgbase-$pkgver.tar.xz
        config_types.h)

build() {
  cd "$srcdir/${pkgbase}-${pkgver}"
  ./configure --prefix=/usr 
  make
}

package() {
  cd "$srcdir/${pkgbase}-${pkgver}"
  make DESTDIR="$pkgdir" install

# install BSD license
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgbase/COPYING"

# Resolve multilib conflict
  if [[ $CARCH == "x86_64" ]]; then
    mv "$pkgdir"/usr/include/ogg/config_types{,-64}.h
    install -m 644 "$srcdir/config_types.h" \
      "${pkgdir}/usr/include/ogg/config_types.h"
  fi
}
