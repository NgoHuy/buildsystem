# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer: Jan Alexander Steffens (heftig) <jan.steffens@gmail.com>

pkgdesc="QMI modem protocol helper library"
arch=(i686 x86_64)
url="http://www.freedesktop.org/wiki/Software/libqmi/"
license=(GPL2)
depends=(glib2 bash)
makedepends=(gtk-doc python)
options=('!libtool')
source=(http://www.freedesktop.org/software/$pkgbase/$pkgbase-$pkgver.tar.xz)

build() {
  cd $pkgbase-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
    --disable-static --with-tests
  make
}

check() {
  cd $pkgbase-$pkgver
  make check
}

package() {
  cd $pkgbase-$pkgver
  make DESTDIR="$pkgdir" install
}
