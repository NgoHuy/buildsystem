pkgdesc='A C library for parsing configuration files'
url="https://github.com/williamh/dotconf"
arch=('i686' 'x86_64')
depends=('glibc')
makedepends=('pkgconfig' 'findutils')
license=('LGPL2.1')
source=(${pkgbase}-${pkgver}.tar.gz::"https://github.com/williamh/${pkgbase}/tarball/v${pkgver}")
options=('!libtool')

build() {
  cd "${srcdir}"/williamh-${pkgbase}-4cd7b3a
  autoreconf -i
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}"/williamh-${pkgbase}-4cd7b3a
  make DESTDIR="${pkgdir}" install
}
