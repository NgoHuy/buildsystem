# Original Contributor: WAntilles <wantilles@adslgr.com>

pkgdesc="Open source implementation of the Adaptive Multi Rate (AMR) speech codec"
arch=('i686' 'x86_64')
license=('APACHE')
url="http://opencore-amr.sourceforge.net/"
source=(http://downloads.sourceforge.net/sourceforge/$pkgbase/$pkgbase-$pkgver.tar.gz)
depends=(glibc)
options=('!libtool')

build() {
  cd "$srcdir/$pkgbase-$pkgver"
  ./configure --prefix=/usr --disable-static
  make
}

package() {
  cd "$srcdir/$pkgbase-$pkgver"
  make DESTDIR="$pkgdir" install
}

