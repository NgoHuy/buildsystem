pkgdesc="OpenGL image viewer"
arch=('i686' 'x86_64')
url="http://guichaz.free.fr/gliv/"
license=('GPL')
depends=('gtkglext')
changelog=${PACKAGE_BASE}.changelog
source=(http://guichaz.free.fr/gliv/files/${PACKAGE_BASE}-${PACKAGE_VERSION}.tar.bz2)

build() {
  cd ${pkgbase}-${pkgver}
  ./configure --prefix=/usr --mandir=/usr/share/man
  sed -i \
      -e 's#pixmaps |#pixmaps $(datadir)/applications |#' \
      -e 's#vendor=gnome#vendor=gnome --dir=$(datadir)/applications#' \
    Makefile
  make
}

package() {
  cd ${pkgbase}-${pkgver}
  make DESTDIR=${pkgdir} install
}
