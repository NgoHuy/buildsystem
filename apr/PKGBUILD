pkgdesc="The Apache Portable Runtime"
arch=('i686' 'x86_64')
url="http://apr.apache.org/"
depends=('util-linux')
options=('!libtool')
license=('APACHE')
source=(http://www.apache.org/dist/apr/apr-${PACKAGE_VERSION}.tar.bz2)

build() {
  cd "${pkgbase}-${pkgver}"
  ./configure --prefix=/usr --includedir=/usr/include/apr-1 \
    --with-installbuilddir=/usr/share/apr-1/build \
    --enable-nonportable-atomics \
    --with-devrandom=/dev/urandom \
    --disable-ipv6
  make
}

# FIXME: Failed test: testsockets.c
check() {
  cd "${pkgbase}-${pkgver}"
  make -j1 check
}

package() {
  cd "${pkgbase}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
