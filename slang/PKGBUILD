# Original Contributor: Tom Newsom <Jeepster@gmx.co.uk>

pkgdesc="S-Lang is a powerful interpreted language"
arch=('i686' 'x86_64')
url="http://www.jedsoft.org/slang/"
license=('GPL')
depends=('glibc' 'pcre' 'zlib')
backup=('etc/slsh.rc')
options=('!makeflags')
source=(ftp://ftp.fu-berlin.de/pub/unix/misc/slang/v${pkgver%.*}/${pkgbase}-${pkgver}.tar.bz2{,.asc})

build() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  ./configure --prefix=/usr \
              --sysconfdir=/etc
  make
}

check() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  make check
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  make DESTDIR="${pkgdir}" install-all
}
