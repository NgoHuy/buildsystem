pkgdesc='A tool for measuring web server performance.'
arch=('i686' 'x86_64')
license=('GPL2')
url='http://code.google.com/p/httperf'
depends=('openssl')
source=("http://$pkgbase.googlecode.com/files/$pkgbase-$pkgver.tar.gz")

build() {
  cd $pkgbase-$pkgver
  ./configure --prefix=/usr 
  make
}

package() {
  cd $pkgbase-$pkgver
  make DESTDIR="$pkgdir" install
}

