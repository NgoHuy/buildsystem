# Original Contributor: judd <jvinet@zeroflux.org>

pkgdesc="Configuration tools for Linux networking"
arch=('i686' 'x86_64')
license=('GPL2')
url="http://net-tools.sourceforge.net/"
depends=('glibc')
makedepends=('git')
# use git snapshot currently prefered over release
source=("net-tools::git://git.code.sf.net/p/net-tools/code#commit=6a14c03f")
options=(!makeflags)

prepare() {
  sed -i "s#/sbin#/bin#" ${srcdir}/${pkgbase}/Makefile
  sed -i "s#/usr##" ${srcdir}/${pkgbase}/man/Makefile
}

build() {
  cd ${srcdir}/${pkgbase}
  yes "" | make
}

package() {
  cd ${srcdir}/${pkgbase}
  make DESTDIR=${pkgdir}/usr update

  # the following is provided by yp-tools
  rm "${pkgdir}"/usr/bin/{nis,yp}domainname
  rm "${pkgdir}"/usr/share/man/man1/{nis,yp}domainname.1

  # hostname is provided by inetutils
  rm "${pkgdir}"/usr/bin/{hostname,dnsdomainname,domainname}
  rm -rf "${pkgdir}"/usr/share/man/man1
}
