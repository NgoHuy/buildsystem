# Original Contributor: Sarah Hay <sarahhay@mb.sympatico.ca>

arch=('i686' 'x86_64')
pkgdesc="Library that implements the different protocols (CDDBP, HTTP, SMTP) to access data on a CDDB server (e.g. http://freedb.org)."
url="http://sourceforge.net/projects/libcddb/"
license=('LGPL')
options=('!libtool')
depends=('glibc')
source=("http://downloads.sourceforge.net/sourceforge/${pkgbase}/${pkgbase}-${pkgver}.tar.bz2")

build() {
  cd ${srcdir}/${pkgbase}-${pkgver}
  ./configure --prefix=/usr
  make
}

package() {
  cd ${srcdir}/${pkgbase}-${pkgver}
  make DESTDIR=${pkgdir} install
}
