# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer: Andreas Radke <andyrtr@archlinux.org>

pkgdesc="A portable middleware for email access"
arch=('i686' 'x86_64')
url="http://www.etpan.org/"
license=("custom:etpan")
depends=('libsasl' 'curl' 'expat')
options=('!libtool')
source=(http://downloads.sourceforge.net/sourceforge/${pkgbase}/${pkgbase}-${pkgver}.tar.gz)

build() {
  cd ${pkgbase}-${pkgver}
  ./configure --prefix=/usr \
    --disable-static \
    --disable-db
  make
}

package() {
  cd ${pkgbase}-${pkgver}
  make DESTDIR=${pkgdir} install
  install -Dm644 COPYRIGHT ${pkgdir}/usr/share/licenses/$pkgbase/license.txt
}
