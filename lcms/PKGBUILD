# Original Maintainer: Tobias Kieslich <neri@archlinux.org>
# Original Contributor: Ben <contrasutra@myrealbox.com>

pkgdesc="Lightweight color management development library/engine"
arch=('i686' 'x86_64')
license=('custom')
depends=('libtiff')
url="http://www.littlecms.com"
options=('!libtool')
source=(http://downloads.sourceforge.net/sourceforge/${pkgbase}/${pkgbase}-${pkgver}.tar.gz
        cve-2013-4276.patch)

prepare() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  patch -Np1 -i ../cve-2013-4276.patch
}

build() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  install -Dm 644 COPYING \
    "${pkgdir}/usr/share/licenses/${pkgbase}/LICENSE"
}
