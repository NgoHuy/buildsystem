pkgdesc='Provides useful functions to deal with 3D surfaces meshed with interconnected triangles'
url='http://gts.sourceforge.net/'
license=('LGPL')
arch=('i686' 'x86_64')
depends=('glib2')
source=("http://downloads.sourceforge.net/project/${pkgbase}/${pkgbase}/${pkgver}/${pkgbase}-${pkgver}.tar.gz")

options=('!libtool')

build() {
	cd "${pkgbase}-${pkgver}"
	./configure --prefix=/usr --disable-static
	make
}

package() {
	cd "${pkgbase}-${pkgver}"
	make DESTDIR="${pkgdir}" install
}
