pkgdesc="Extensible Binary Meta Language library"
arch=('i686' 'x86_64')
url="http://dl.matroska.org/downloads/libebml/"
license=('LGPL')
depends=('gcc-libs')
source=("http://dl.matroska.org/downloads/${pkgbase}/${pkgbase}-${pkgver}.tar.bz2")

build() {
  cd "${srcdir}/${pkgbase}-${pkgver}/make/linux"

  make
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}/make/linux"

  make prefix="${pkgdir}/usr" install
}
