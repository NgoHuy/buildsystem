# Maintainer: Severus <severus@theslinux.org>
# Original Maintainer: Jan de Groot <jgc@archlinux.org>

pkgdesc="Freedesktop sound theme"
arch=(any)
license=('custom')
makedepends=('intltool')
source=(http://people.freedesktop.org/~mccann/dist/${pkgbase}-${pkgver}.tar.bz2)
url="http://freedesktop.org/wiki/Specifications/sound-theme-spec"

build() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgbase}-${pkgver}"
  make DESTDIR="${pkgdir}" install
  install -Dm644 "${srcdir}/${pkgbase}-${pkgver}/CREDITS" \
    "${pkgdir}/usr/share/licenses/${pkgbase}/CREDITS"
}
